<style>
.highlight-heading h1 {
    font-size: 35px;
}
.highlight-content .row > div {
    padding-left: 10px;
    padding-right: 10px;
}
.highlight-item {
    position: relative;
    border-radius: 10px;
    margin-top: 20px;
}
.highlight-item img {
    border-radius: 10px;
}
.highlight-item .content {
    position: absolute;
    left: 0;
    bottom: 0;
    background-color: #27ccac9e;
    color: #ffffff;
    width: 100%;
    border-bottom-left-radius: 10px;
    border-bottom-right-radius: 10px;
}
