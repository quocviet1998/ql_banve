}
.dedicate-heading h1 {
    font-size: 35px;
}
.dedicate-content {
    display: flex;
    justify-content: space-between;
}
.dedicate-item-bg {
    width: 20%;
    padding: 5px;
}
.dedicate-item {
    box-shadow: 3px 3px 10px #ccc;
}
.dedicate-item-content {
    background: #19d3af;
    display: flex;
    font-weight: 500;
    padding: 5px;
}
.dedicate-item-content .content {
    width: 90%;
}
.dedicate-item-content .content h2 {
    font-size: 20px;
}
.dedicate-item-content .content span {
    font-size: 16px;
    margin-right: 10px;
    color: red;
}
.dedicate-item-content .content span:last-child {
    text-decoration: line-through;
    color: gray;
}
.dedicate-item-content .icon {
    width: 10%;
    display: flex;
    justify-content: center;
    align-items: center;
}
</style>
<script type="text/javascript">
    $('.col-md-3').on('click', function () {
        var text = $(this).find("h2").text();
        $("#autocomplete").val(text.substring(0, text.search(" -> ")));
        $("#autocomplete2").val(text.substring(text.search(" -> ") + 4, text.length));
        alert("Đã chọn tuyến đường!");
    });
</script>