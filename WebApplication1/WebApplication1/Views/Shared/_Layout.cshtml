    @*=================================search============================*@
    <form id="formSearch" style="max-width:1500px; margin:auto;" method="POST" action="~/Home/Search">
    <div class="searchDest">
        <div class="container text-center">
            <div id="prefetch">
                <i class="far fa-2x fa-building"></i>
                <input name="startPoint" id="autocomplete" autocomplete="false" class="typeahead" style="width: 250px;" type="text" placeholder="Nhập điểm đi">
                <i class="far fa-2x fa-building"></i>
                <input name="endPoint" id="autocomplete2"  autocomplete="false" class="typeahead" style="width: 250px;" type="text"  placeholder="Nhập điểm đến" />
            </div>
            <div class="room-time">          
                <i class="far fa-2x fa-calendar-alt"></i>
                <input type="text" id="startDate" name="startDate" placeholder="Ngày khởi hành" readonly="true"/>

            </div>
            <div>
                @*<input id="numRoom" name="numRoom" type="number" value="1" min="1" max="10" />*@
                <span style="display: -webkit-inline-box;">
                    <select class="form-control" id="timeStart">
                        <option value="0" selected>Giờ đi</option>
                        <option value="1">0h - 8h</option>
                        <option value="2">8h - 16h</option>
                        <option value="3">16h - 24h</option>
                    </select>
                </span>
                <span>Thời gian</span>
            </div>
            <div id="search">
                <a>Search</a>
            </div>
        </div>
    </div>
    </form>
